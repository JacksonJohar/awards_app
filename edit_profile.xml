<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="168dp"
        android:layout_height="225dp"
        android:layout_marginEnd="243dp"
        android:src="@drawable/default_photo"
        android:onClick="onPicClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:onClick="onPicClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:contentDescription="Username"
        android:maxLines="1"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="left"
        android:hint="Username"
        android:inputType="none"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:contentDescription="Password"
        android:maxLines="1"
        android:gravity="left"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:contentDescription="First Name"
        android:gravity="left"
        android:hint="First Name"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/last_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:contentDescription="Last Name"
        android:gravity="left"
        android:maxLines="1"
        android:hint="Last Name"
        android:inputType="text"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/first_name" />

    <CheckBox
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:text="Administrator User"
        app:layout_constraintBottom_toTopOf="@+id/first_name"
        app:layout_constraintStart_toEndOf="@+id/pic" />

    <EditText
        android:id="@+id/department"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:contentDescription="Department"
        android:gravity="left"
        android:hint="Department"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="18dp"
        android:text="Department"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/department"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic" />

    <EditText
        android:id="@+id/position"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:background="#C5C1C1"
        android:maxLines="1"
        android:contentDescription="Position"
        android:gravity="left"
        android:hint="Position"
        android:inputType="text"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/department" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="18dp"
        android:text="Position"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/position"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Your Story:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/story"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="#C5C1C1"
        android:contentDescription="Position"
        android:gravity="left"
        android:hint="Tell us something about yourself!"
        android:inputType="text"
        android:textColor="#15613A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:contentDescription="Words"
        android:minWidth="56sp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_gravity="left"
            android:background="#3F51B5"
            android:maxWidth="10dp"
            android:onClick="onBackClick"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/arrow_with_logo"
            tools:layout_editor_absoluteX="379dp"
            tools:layout_editor_absoluteY="12dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="18dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="onSaveClick"
            android:background="?attr/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_save"
            tools:layout_editor_absoluteX="356dp"
            tools:layout_editor_absoluteY="2dp" />

    </android.support.v7.widget.Toolbar>


</android.support.constraint.ConstraintLayout>